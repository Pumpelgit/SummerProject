{{#if project}}
<form action="/projects/{{project.id}}/edit" method="POST" enctype="multipart/form-data">
{{else}}
<form action="/projects/create" method="POST" enctype="multipart/form-data">
{{/if}}
  <div class="form-group">
    <label for="name">Project Name</label>
    <input name="name" type="text" class="form-control {{#if error.name }}is-invalid{{/if}}" id="name"
      placeholder="Enter project name" value="{{ project.name }}">

    {{#if error.name}}
    <div class="invalid-feedback">
      {{error.name.message}}
    </div>
    {{/if}}
  </div>

  <div class="form-group">
    <label for="url">URL</label>
    <input name="url" type="text" class="form-control {{#if error.url }}is-invalid{{/if}}" id="url"
      placeholder="Enter url" value="{{ project.url }}">

    {{#if error.url}}
    <div class="invalid-feedback">
      {{error.url.message}}
    </div>
    {{/if}}
  </div>

  <div class="form-group">
    <label for="image">Image</label>
    <input value="{{project.image}}" name="image" type="file" class="form-control {{#if error.image }}is-invalid{{/if}}" id="image" required>  
    {{#if error.image}}
    <div class="invalid-feedback">
      {{error.image.message}}
    </div>
    {{/if}}
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" type="text" class="form-control {{#if error.description }}is-invalid{{/if}}" id="description"
      placeholder="Enter project description" rows="4">{{ project.description }}</textarea>

    {{#if error.description}}
    <div class="invalid-feedback">
      {{error.description.message}}
    </div>
    {{/if}}
  </div>

  <button type="submit" class="btn btn-primary">
    Submit
  </button>
</form>